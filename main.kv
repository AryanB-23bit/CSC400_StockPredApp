    spacing:dp(17)
    radius:dp(30)
    ripple_behavior: True
    image:''
    text:""
    subtext:''
    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
