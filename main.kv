<MainScreen>:
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"Plutus"
                    font_style:"H4"
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)
        MDGridLayout:
            size_hint_y:.75
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            ElementCard:
                image:"images/bearbull.png"
                text:"Predict top American Indexes"
                on_release:root.manager.current = "Predict1"
                on_press:root.manager.transition.direction = "right"
            ElementCard:
                image:"images/search.png"
                text:"Search Stocks"
                on_release:root.manager.current = "Search"
                on_press:root.manager.transition.direction = "left"
<MDSearchScreen>:
    MDBoxLayout:
        orientation:'vertical'
        MDIconButton
            icon:"arrow-left"
            on_release:root.manager.current = "Main"
            on_press:root.manager.transition.direction = "right"
            on_release:root.ids.search_field.text = ""
            on_release:root.ids.search_label1.text = ""
            on_release:root.ids.comp_name.text = ""
            on_release:root.ids.plot1.source = ""
            on_press:root.ids.plot1.opacity = 0
        MDGridLayout:
            size_hint_y:.75
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            MDTextField:
                id:search_field
                font_size:dp(20)
                mode:"rectangle"
                color_mode:"accent"
                hint_text:"Search for a stock"
                helper_text:"Enter a proper stock ticker"
                helper_text_mode:"on_focus"
            MDFillRoundFlatIconButton:
                text:"Search"
                font_size:dp(20)
                icon:"chart-line"
                on_release:root.get_data()
                on_release:root.ids.plot1.source = ""
                on_press:root.ids.plot1.opacity = 100
#        MDIconButton:
#            id: more_info
#            icon:"information-variant"
#            opacity:0
#            disabled: True
#            md_bg_color: app.theme_cls.primary_color
#            icon_size:dp(50)
#            pos_hint:{"center_x":.5}
#            on_release:root.manager.current = ""
#            on_press:root.manager.transition.direction = ""
        Image:
            id:plot1
            opacity:0
            pos_hint:{"center_y":.1}
            allow_stretch:True
            nocache:True
        MDGridLayout:
            size_hint_y:.75
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            MDLabel:
                id:comp_name
                text:""
                font_style:"H4"

            MDLabel:
                id:search_label1
                text:""
                font_size:dp(17)
                color:app.theme_cls.primary_color
                halign:"center"
                markup:True
<MDIndex>:
    MDBoxLayout:
        orientation:'vertical'
        MDIconButton:
            icon:"arrow-left"
            on_release:root.manager.current = "Main"
            on_press:root.manager.transition.direction = "left"
            ripple_behavior:True
        MDGridLayout:
            size_hint_y:.75
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            NewCard:
                md_bg_color:app.theme_cls.primary_color
                text:"Model Test vs Actual Accuracy"
                subtext:"Click on the card for more info(calculation based on S&P500)"
                on_release:root.manager.current = "TestPred"
                on_press:root.manager.transition.direction = "down"
            NewCard:
                md_bg_color:69/255,55/255,86/255,1
                text:"Model Train vs Actual Accuracy"
                subtext:"Click on the card for more info(calculation based on S&P500)"
                on_release:root.manager.current = "TrainPred"
                on_press:root.manager.transition.direction = "up"
            NewCard:
                md_bg_color:app.theme_cls.accent_color
                text:"Error throughout the dates"
                text_color: "black"
                subtext:"Click on the card for more info(calculation based on S&P500)"
                on_release:root.manager.current = "ErrorCalc"
                on_press:root.manager.transition.direction = "down"
            ElementCard:
                md_bg_color:20/255,40/255,80/255,1
                image:"images/sp500.jpg"
                text:"Predictions on S&P500 model"
                on_press:root.manager.current = "PredSP500"
                on_press:root.manager.transition.direction = "up"
            ElementCard:
                md_bg_color:1/255,1/255,1/255,1
                image:"images/dj.svg.png"
                text:"Predictions on Dow Jones model"
                on_release:root.manager.current = "PredDJ"
                on_press:root.manager.transition.direction = "down"
            ElementCard:
                md_bg_color:50/255,50/255,50/255,1
                image:"images/nasdaq.svg.png"
                text:"Predictions on NASDAQ model"
                on_release:root.manager.current = "PredNSD"
                on_press:root.manager.transition.direction = "up"
